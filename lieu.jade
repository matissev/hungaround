				.info-lieu
					h2.info-user-nom  <strong>Col de la Lyé</strong>
				.info-meteo
					h4.info-meteo-text Météo
					p.info-meteo-jour Lun
					img.info-meteo-img(src="img/weather
					/stormy.svg" alt="storm")
					p.info-meteo-jour Mar
					img.info-meteo-img(src="img/weather/sunny.svg" alt="storm")
					p.info-meteo-jour Mer
					img.info-meteo-img(src="img/weather/stormy.svg" alt="storm")
					p.info-meteo-jour Jeu
					img.info-meteo-img(src="img/weather/cloudy.svg" alt="storm")
